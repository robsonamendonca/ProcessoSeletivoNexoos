<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
	        <h1>Visualizar Usu√°rio</h1>
			<div class="panel panel-default">
			  <div class="panel-heading">
				Confira os dados
			  </div>
			  <div class="panel-body">
					<p>
					  <strong>Nome:</strong>
					  <%= @usuario.name %>
					</p>

					<p>
					  <strong>Telefone:</strong>
					  <%= @usuario.phone %>
					</p>

			  </div>
			</div>

	        <div class="btn-toolbar" role="toolbar">
		        <div class="btn-group">
		             <%= link_to  usuarios_path do %>
				      <button title="Voltar" type="button" class="btn btn-default" aria-label="Left Align">
				        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>   
				      </button>  	
		             <% end %>

		            <%= link_to edit_usuario_path(@usuario) do %>                
		              <button title="Editar" type="button" class="btn btn-default" aria-label="Left Align">
		                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>   
		              </button>                  
		            <% end %>
		        </div>    		
	       </div> 
	       <p id="notice"><%= notice %></p>   
	    </div>	   
	</div>	
</div>