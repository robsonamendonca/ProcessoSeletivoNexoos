<div class="container">
    <h1 class="sub-header">Lista de Usuários</h1>
    <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Telefone</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @usuarios.each do |usuario| %>
          <tr>
            <td><%= usuario.name %></td>
            <td><%= usuario.phone %></td>
            <td>
              <div class="btn-toolbar" role="toolbar">
                <div class="btn-group">
                     <%= link_to  usuario do %>
                      <button title="Ver" type="button" class="btn btn-default" aria-label="Left Align">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>   
                      </button>  
                     <% end %>

                    <%= link_to edit_usuario_path(usuario) do %>                
                      <button title="Editar" type="button" class="btn btn-default" aria-label="Left Align">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>   
                      </button>                  
                    <% end %>

                    <%= link_to usuario, method: :delete, data: { confirm: 'Você tem certeza?' } do %>
                        <button title="Deletar" type="button" class="btn btn-default" aria-label="Left Align">
                          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>   
                       </button>  
                    <% end %>
                </div> 
              </div>     
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>

    <br>

    <%= link_to new_usuario_path do %>
        <button title="Adicionar Usuário" type="button" class="btn btn-default" aria-label="Left Align">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>   
        </button>      
    <% end %>
    <p id="notice"><%= notice %></p>
</div>    